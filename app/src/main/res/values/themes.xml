<resources>
    <!-- Base application theme. -->
    <style name="Theme.InnovaHackathon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/buttonCartBackgroundColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/titleBarBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
    </style>

    <style name="MainTitle">
        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/mainTitleTextColor</item>
    </style>

    <style name="EditText">
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/editTextTextColor</item>
    </style>

    <style name="ContentText">
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/contentTextColor</item>
    </style>

</resources>